extends ../layouts/common 
block content

    h1 UPDATE BOOKS

    form(action="/books/" + book.id + "/update", method="POST")
        .form-group
        label(for="title") Book Name
            input#title.form-control(type="text", name="title")

        .form-group
        label(for="description") Description
            input#description.form-control(type="text", name="description")
        
            button.btn.btn-success.mt-3  Update

    table.table.table-dark
        tr
            th ID
            th Title
            th Decription
        
        tr
            td= book.id
            td= book.title
            td= book.description
            

        